package server;

import java.io.IOException;

public class ReaderManager implements Runnable {

	@Override
	public void run() {
		String filename = System.getProperty("user.dir")
				+ "/src/server/temp.rss";
		Thread t = new Thread();
		while (true) {
			if (t.isAlive()) {
				try {
					Thread.sleep(5000);
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
			}
			try {
				t = new Thread(new TwitterReader(filename, 100));
				t.start();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}

	}

}
